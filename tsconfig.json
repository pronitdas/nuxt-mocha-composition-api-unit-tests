{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "@types/node",
      "@types/mocha",
      "@types/power-assert"
    ]
  },
  "include": [
    // JavaScript
    "components/**/*.js",
    "plugins/**/*.js",
    "nuxt.config.js",
    // Vue
    "components/**/*.vue",
    "pages/**/*.vue",
    "layouts/**/*.vue",
    // TypeScript
    "shims/**/*.d.ts",
    "components/**/*.ts",
    "plugins/**/*.ts",
    "nuxt.config.ts",
    // Tests
    "test/spec/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
